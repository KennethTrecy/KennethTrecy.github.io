{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"module": "ES2015",
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
	},
	"include": [
		"src/*.ts",
		"src/**/*.ts",
		"src/*.svelte",
		"src/**/*.svelte"
	],
	"exclude": [
		"src/hooks.server.js"
	]
}
