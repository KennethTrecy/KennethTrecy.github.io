{
	"name": "kennethtrecy.github.io",
	"version": "v0.1.0-dev",
	"description": "This is a personal website of Kenneth Trecy Tobias.",
	"homepage": "https://github.com/KennethTrecy/kennethtrecy.github.io",
	"keywords": [
		"personal",
		"website"
	],
	"type": "module",
	"private": "true",
	"license": "MIT",
	"scripts": {
		"prepare": "husky install",
		"dev": "npm run development",
		"build": "vite build",
		"preview": "vite preview",
		"development": "vite dev",
		"watch": "npx rollup -c bundler/dev/rollup.config.js --watch",
		"prod": "vite build",
		"production:partial": "npx rollup -c bundler/prod/rollup.partial.config.js",
		"production:full": "npx rollup -c bundler/prod/rollup.full.config.js",
		"test:unit": "npx vitest",
		"test:e2e:install": "npx playwright install",
		"test:e2e": "npm run build && npm run test:e2e:fast",
		"test:e2e:fast": "npx playwright test",
		"test:watch_unit": "npx mocha hidden/t/**/*.js --watch --watch-files hidden/t/**/*.js"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@commitlint/config-conventional": "^17.3.0",
		"@fullhuman/postcss-purgecss": "^5.0.0",
		"@playwright/test": "^1.30.0",
		"@sveltejs/adapter-cloudflare": "^2.0.0",
		"@sveltejs/kit": "^1.0.10",
		"@tailwindcss/typography": "^0.5.8",
		"@testing-library/svelte": "^3.2.2",
		"@types/node": "^18.11.18",
		"autoprefixer": "^10.4.13",
		"changelogen": "^0.4.0",
		"esbuild": "^0.16.10",
		"gramma": "^1.6.0",
		"husky": "^8.0.0",
		"jsdom": "^20.0.3",
		"postcss": "^8.4.20",
		"sass": "^1.57.1",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vitest": "^0.28.2"
	},
	"dependencies": {
		"daisyui": "^2.46.0",
		"rgb-hex": "^4.0.0",
		"svelte": "^3.55.0",
		"tailwindcss": "^3.2.4",
		"theme-change": "^2.3.0"
	}
}
